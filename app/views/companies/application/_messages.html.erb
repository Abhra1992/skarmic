<section class="messages row">
  <div class="col-md-12 col-sm-12">
    <h4 class="mt-0">Messages</h4>
    <div class="panel-group chat-messages" id="accordion">
      <% application.messages.each do |m| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <%= link_to "#message-#{m.id}", "data-toggle" => "collapse", "data-parent" => "#accordion" do %>
              <%= m.messager %> <small class="text-muted ml-5"><%= distance_of_time_in_words_to_now m.created_at %></small>
            <% end %>
          </h4>
        </div>
        <div id="message-<%= m.id %>" class="panel-collapse collapse">
          <div class="panel-body">
            <p><%= m.body %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>