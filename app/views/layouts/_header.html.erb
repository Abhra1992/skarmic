<header role="header" class="header">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#skarmic-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <% 3.times do %>
          <span class="icon-bar"></span>
          <% end %>
        </button>
        <%= link_to "Skarmic", root_path, class: "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="skarmic-navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Companies", [:companies] %></li>
          <% if candidate_signed_in? %>
          <li><%= link_to "My Applications", candidate_applications_path %></li>
          <% end %>
        </ul>
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Contact Us", [:pages, :contact] %></li>
          <li class="dropdown">
            <% if candidate_signed_in? %>
            <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
              Hello, <%= current_candidate %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "My Account", "#" %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign Out", destroy_candidate_session_path, method: :delete %></li>
            </ul>
            <% elsif recruiter_signed_in? %>
            <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
              Hello, <%= current_recruiter %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "My Account", "#" %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign Out", destroy_recruiter_session_path, method: :delete %></li>
            </ul>
            <% else %>
            <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
              Sign In <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "As Recruiter", new_recruiter_session_path %></li>
              <li class="divider"></li>
              <li><%= link_to "As Candidate", new_candidate_session_path %></li>
            </ul>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>